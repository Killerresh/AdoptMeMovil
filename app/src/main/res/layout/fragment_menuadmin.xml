<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F2F2F2">

    <!-- Botón personalizado 1 -->
    <LinearLayout
        android:id="@+id/btn_reporte_adoptadas"
        android:layout_width="270dp"
        android:layout_height="290dp"
        android:layout_marginBottom="30dp"
        android:background="#817BA6"
        android:backgroundTint="#9C27B0"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_perro"
            android:layout_width="161dp"
            android:layout_height="153dp"
            android:contentDescription="Ícono de perro"
            android:src="@drawable/dog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Reporte de mascotas adoptadas"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botón personalizado 2 -->
    <LinearLayout
        android:id="@+id/btn_reporte_en_adopcion"
        android:layout_width="270dp"
        android:layout_height="290dp"
        android:background="#817BA6"
        android:backgroundTint="#9C27B0"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_gato"
            android:layout_width="147dp"
            android:layout_height="156dp"
            android:contentDescription="Ícono de gato"
            android:src="@drawable/cat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Reporte de mascotas en adopción"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
